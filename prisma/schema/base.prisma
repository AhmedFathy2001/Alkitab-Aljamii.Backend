generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Faculty-scoped roles (used in UserFacultyRole)
enum FacultyRole {
  faculty_admin
  professor
  student
}

enum ContentStatus {
  pending
  approved
  rejected
}

enum ContentType {
  textbook
  reference
  notes
  guide
  other
}

enum ApprovalAction {
  approved
  rejected
  revision_requested
}

enum AccessAction {
  view
  stream
  download
}
