# Application
PORT=8000
NODE_ENV=development

# Database - individual vars for docker-compose, DATABASE_URL for app
DB_PORT=5433
DB_USERNAME=alkitab
DB_PASSWORD=alkitab_secret
DB_DATABASE=alkitab_db
DATABASE_URL=postgresql://alkitab:alkitab_secret@localhost:5433/alkitab_db

# JWT Authentication (secrets must be 32+ characters)
JWT_ACCESS_SECRET=dev-access-secret-key-min-32-characters-long
JWT_REFRESH_SECRET=dev-refresh-secret-key-min-32-characters-long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# MinIO Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9002
MINIO_CONSOLE_PORT=9003
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=alkitab-content
