# Application
PORT=8000
NODE_ENV=development

# Database (PostgreSQL) - used by both app and docker-compose
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=alkitab
DB_PASSWORD=alkitab_secret
DB_DATABASE=alkitab_db

# JWT Authentication
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-prod-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-prod-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# MinIO Storage - used by both app and docker-compose
MINIO_ENDPOINT=localhost
MINIO_PORT=9002
MINIO_CONSOLE_PORT=9003
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=alkitab-content
